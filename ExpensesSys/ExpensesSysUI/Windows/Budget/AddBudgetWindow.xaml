<mah:MetroWindow x:Class="ExpensesSysUI.Windows.AddBudgetWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ExpensesSysUI.Windows"
        mc:Ignorable="d"
        xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
                 WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Title="预算科目-新增" 
        Height="650" 
        Width="600">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width=".1*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width=".1*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height=".1*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="0.1*"/>
        </Grid.RowDefinitions>

        <Label Grid.Row="1" 
               Grid.Column ="1"
               Content="名称"
               Style="{StaticResource displayLableStyle}"/>
        <TextBox Grid.Row="2"
                 Grid.Column="1"
                 Style="{StaticResource editTextBoxStyle}"
                 Text="{Binding AddBudget.Name}"
                 MinHeight="30"/>
        <Label Grid.Row="3"
               Grid.Column="1"
               Content="所属部门"
               Style="{StaticResource displayLableStyle}"/>
        <ComboBox Grid.Row="4"
                  Grid.Column="1"
                  MinHeight="30"
                  Margin="3,5"
                  Style="{StaticResource MahApps.Styles.ComboBox}"
                  ItemsSource="{Binding Departments}"
                  DisplayMemberPath="Name"
                  SelectedItem="{Binding SelectedDepartment}"
                  IsReadOnly="True"
                  SelectedValuePath="{Binding DepartmentID}"/>
        <Label Grid.Row="5" 
               Grid.Column ="1"
               Content="金额"
               Style="{StaticResource displayLableStyle}"/>
        <TextBox Grid.Row="6"
                 Grid.Column="1"
                 Style="{StaticResource editTextBoxStyle}"
                 Text="{Binding AddBudget.Money,UpdateSourceTrigger=PropertyChanged}"
                 TextChanged="TextBox_TextChanged"
                 MinHeight="30">
        </TextBox>
        <Label Grid.Row="7" 
               Grid.Column ="1"
               Content="开支"
               Style="{StaticResource displayLableStyle}"/>
        <TextBox Grid.Row="8"
                 Grid.Column="1"
                 Style="{StaticResource editTextBoxStyle}"
                 IsReadOnly="True"
                 Text="{Binding AddBudget.ActualExpense}"
                 MinHeight="30"/>
        <Label Grid.Row="9" 
               Grid.Column ="1"
               Content="余额"
               Style="{StaticResource displayLableStyle}"/>
        <TextBox Grid.Row="10"
                 Grid.Column="1"
                 Style="{StaticResource editTextBoxStyle}"
                 IsReadOnly="True"
                 Text="{Binding AddBudget.Surplus}"
                 MinHeight="30"/>
        <Label Grid.Row="11" 
               Grid.Column ="1"
               Content="备注"
               Style="{StaticResource displayLableStyle}"/>
        <TextBox Grid.Row="12"
                 Grid.Column="1"
                 AcceptsReturn="True"
                 Style="{StaticResource editTextBoxStyle}"
                 Text="{Binding AddBudget.Remark}"
                 MinHeight="30"/>

        <StackPanel Grid.Row="13"
                    Grid.Column="1"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right">
            <Button Content="退出"
                    Style="{StaticResource menuButton}"
                    BorderThickness="0"
                    Background="Crimson"
                    Click="btnExit_Click"/>
            <Button Content="新增"
                    Style="{StaticResource menuButton}"
                    BorderThickness="0"
                    Click="btnAdd_Click"/>
        </StackPanel>
    </Grid>
</mah:MetroWindow>
